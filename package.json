{
  "name": "manuscripts-api",
  "version": "1.0.1",
  "description": "manuscripts.io API server",
  "license": "Apache-2.0",
  "private": true,
  "main": "dist/index",
  "repository": "gitlab:mpapp-public/manuscripts-api",
  "scripts": {
    "gulp": "gulp",
    "dev": "ts-node --transpile-only --files src",
    "start": "run-s build-app run",
    "run": "node dist/index",
    "build": "run-s build-app",
    "build-app": "tsc --project tsconfig.build.json",
    "attach-prisma": "npx prisma generate",
    "migrate-prisma": "npx prisma migrate dev --name init",
    "migrate-prisma-deploy": "npx prisma migrate deploy",  
    "watch": "tsc-watch --onSuccess \"npm run run\"",
    "lint": "eslint src --ext .js,.ts --max-warnings 0",
    "lint-fix": "eslint src --ext .js,.ts --max-warnings 0 --fix",
    "typecheck": "tsc --noEmit",
    "test": "run-s test:unit test:int",
    "test:unit": "jest --ci --config=./jest.config.unit.test.js --no-cache --detectOpenHandles --forceExit --coverage --runInBand --reporters=default --reporters=jest-junit",
    "test:unit:dev": "jest --config=./jest.config.unit.test.js --runInBand --watch",
    "test:int": "NODE_OPTIONS=--max_old_space_size=4096 jest --ci --config=./jest.config.int.test.js --no-cache --forceExit --coverage --reporters=default --reporters=jest-junit --runInBand --logHeapUsage --bail",
    "test:int:dev": "jest --config=./jest.config.int.test.js --runInBand --watch",
    "debug-test:int": "NODE_OPTIONS=--max_old_space_size=4096 node --inspect-brk ./node_modules/.bin/jest --config=./jest.config.int.test.js --no-cache --runInBand",
    "build-lint": "run-s build lint",
    "clean": "rm -rf dist/",
    "docs": "cd doc && npm ci && ./node_modules/swagger-to-static/index.js manuscripts-io-api-v1.yml ."
  },
  "pre-commit": [
    "lint"
  ],
